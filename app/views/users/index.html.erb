<% provide(:title, 'Users') %>

<div class='default-container'>

  <h1>Users</h1>
  <table class="table table-striped table-hover">
    <tr>
      <% if !@account %>
        <th>Account</th>
      <% end %>
      <th>Title</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Role</th>
      <th></th>
    </tr>
  <% @users.each do |user| %>
    <tr>
      <% if !@account %>
        <td><%= link_to(user.account ? user.account.name : "", user.account) %></td>
      <% end %>
      <td><%= user.title %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.email %></td>
      <td><%= user.role %></td>
      <td>
        <%= link_to user do %><i class="icon-eye-open"></i><% end %>
        <%= link_to edit_user_path(user) do %><i class="icon-pencil"></i><% end %>
        <%= link_to user, confirm: 'Are you sure?', method: :delete do %><i class="icon-remove"></i><% end %>
      </td>
    </tr>
  <% end %>
  </table>

  <%= link_to 'New User', new_user_path(account_id: @account), class: "btn btn-primary" %>

</div>