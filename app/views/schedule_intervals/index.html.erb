<% provide(:title, 'Intervals') %>
<h1><%= @mall.name %> - Schedules - Intervals</h1>
<table class="table table-striped table-hover">
  <tr>
    <th>Name</th>
    <th>Day</th>
    <th>Open Time</th>
    <th>Close Time</th>
    <th></th>
  </tr>
<% @intervals.each do |interval| %>
  <tr>
    <td><%= link_to interval.name, mall_schedule_schedule_interval_path(@mall, @schedule, interval) %></td>
    <td><%= link_to ScheduleInterval.day_name(interval.day), mall_schedule_schedule_interval_path(@mall, @schedule, interval) %></td>
    <td><%= interval.open_string %></td>
    <td><%= interval.close_string %></td>
    <td><%= link_to 'Edit', edit_mall_schedule_schedule_interval_path(@mall, @schedule, interval) %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Schedule', mall_schedule_path(@mall, @schedule), class: "btn" %>
<%= link_to 'New Interval', new_mall_schedule_schedule_interval_path(@mall, @schedule), class: "btn btn-primary" %>
