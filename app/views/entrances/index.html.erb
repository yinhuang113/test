<% provide(:title, 'Entrances') %>
<h1><%= @floor.mall.name %> - <%= @floor.label %> - Entrances</h1>
<table class="table table-striped table-hover">
  <tr>
    <th>Floor</th>
    <th>Name</th>
    <th>Location</th>
    <th style="width: 56px"></th>
  </tr>
<% @entrances.each do |entrance| %>
  <tr>
    <td><%= link_to entrance.floor.label, entrance.floor %></td>
    <td><%= entrance.name %></td>
    <td><%= entrance.location %></td>
    <td>
      <%= link_to [@floor.mall, @floor, entrance] do %><i class="icon-eye-open"></i><% end %>
      <%= link_to edit_mall_floor_entrance_path(@floor.mall, @floor, entrance) do %><i class="icon-pencil"></i><% end %>
      <%= link_to [@floor.mall, @floor, entrance] , confirm: 'Are you sure?', method: :delete do %><i class="icon-remove"></i><% end %>
    </td>
  </tr>
<% end %>
</table>

<%= link_to 'Floor', mall_floor_path(@floor.mall, @floor), class: "btn" %>
<%= link_to 'New Entrance', new_mall_floor_entrance_path(@floor.mall, @floor), class: "btn btn-primary" %>
