<% provide(:title, @floor.mall.name) %> 
<h1><%= @floor.mall.name %> - <%= @floor.label %> - <%= @entrance.name %></h1>

<div class="row">
  <div class="span6 offset3">
    <ul>
      <li>Floor: <%= @entrance.floor.label %></li>
      <li>Name: <%= @entrance.name %></li>
      <li>Location: <%= @entrance.location %></li>
    </ul>
    <%= link_to 'Entrances', mall_floor_entrances_path(@floor.mall, @floor), class: "btn" %>
    <%= link_to 'Edit', edit_mall_floor_entrance_path(@floor.mall, @floor, @entrance), class: "btn btn-primary" %>
  </div>
</div>
