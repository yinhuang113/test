<%= simple_form_for(@mall) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <%= f.association :account, as: :hidden %>
  <%= f.input :status, label: "Status", collection: Mall::STATUS.collect, label_method: lambda { |s| s.to_s.humanize }, include_blank: false %>
  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :website %>
  <%= f.input :phone %>
  <%= f.input :address %>
  <%= f.input :city %>
  <%= f.input :state %>
  <%= f.input :zipcode %>
  <%= f.input :latitude %>
  <%= f.input :longitude %>
  
  <%= f.button :submit, class: "btn btn-large btn-primary" %>
<% end %>
