<% provide(:title, @account.name) %> 
<h1><%= @account.name %></h1>

<div class="row">
  <div class="span6 offset3">
    <ul>
      <li>Name: <%= @account.name %></li>
      <li>Email: <%= @account.email %></li>
      <li>Address 1: <%= @account.address1 %></li>
      <li>Address 2: <%= @account.address2 %></li>
      <li>City: <%= @account.city %></li>
      <li>State: <%= @account.state %></li>
      <li>Zip/Postal code: <%= @account.zipcode %></li>
      <li>Phone: <%= @account.phone %></li>
      <li>Website: <%= @account.website %></li>
      <li>Status: <%= @account.status %></li>
    </ul>
    <%= link_to 'Accounts', accounts_path, class: "btn" %>
    <%= link_to 'Malls', malls_path(account_id: @account.id), class: "btn" %>
    <%= link_to 'Users', users_path(account_id: @account.id), class: "btn" %>
    <%= link_to 'Edit', edit_account_path(@account), class: "btn btn-primary" %>
  </div>
</div>
