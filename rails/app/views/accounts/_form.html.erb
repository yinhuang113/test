<%= simple_form_for(@account) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :address1 %>
  <%= f.input :address2 %>
  <%= f.input :city %>
  <%= f.input :state %>
  <%= f.input :zipcode %>
  <%= f.input :phone %>
  <%= f.input :website %>
  <%= f.input :status_value, label: "Status", collection: Account::STATUSES, include_blank: false %>
  
  <%= f.button :submit, class: "btn btn-large btn-primary" %>
<% end %>
