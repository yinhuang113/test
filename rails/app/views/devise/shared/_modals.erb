<% if modal == "signup" %>
  <div class="modal hide fade" id="modal1">
        <div class="modal-header borNon">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h3 class="requestAcc">Request Access</h3>
        </div>
        <div class="modal-header borNon padr30px">
        <form>
                <label><i>Name</i> </label>
                <input type="text" class="spanf" />
                <label><i>Email Address</i> </label>
                <input type="text" class="spanf" />
                <label><i>Real Estate / Shopping Mall</i> </label>
                <input type="text" class="spanf" />
                <label><i>Telephone</i> </label>
