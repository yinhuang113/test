<% provide(:title, 'All malls') %>
<h1>Malls</h1>
<table class="table table-striped table-hover">
  <tr>
    <% if !@account %>
      <th>Account</th>
    <% end %>
    <th>Mall Name</th>
    <th>Address</th>
    <th>Email</th>
    <th style="width: 36px"></th>
  </tr>
<% @malls.each do |mall| %>
  <tr>
    <% if !@account %>
      <td><%= link_to(mall.account ? mall.account.name : "", mall.account) %></td>
    <% end %>
    <td><%= link_to(mall.name, mall) %></td>
    <td><%= "#{mall.address} #{mall.city}, #{mall.state} #{mall.zipcode}" %></td>
    <td><%= mall.email %></td>
    <td>
      <%= link_to edit_mall_path(mall) do %><i class="icon-pencil"> </i><% end %>
      <%= link_to mall, confirm: 'Are you sure?', method: :delete do %><i class="icon-remove"> </i><% end %>
    </td>
  </tr>
<% end %>
</table>
<%= will_paginate %>

<%= link_to 'New Mall', new_mall_path(account_id: @account), class: "btn btn-primary" %>

