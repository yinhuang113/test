<% provide(:title, @mall.name) %> 
<h1><%= @mall.name %></h1>

<div class="row">
  <div class="span6 offset3">
    <ul>
      <li>Vendor: <%= @store.vendor.name %></li>
      <li>Category: <%= @store.vendor_category.name %></li>
      <li>Polygon: <%= @store.polygon.vertices %></li>
      <li>Description: <%= @store.description %></li>
      <li>Telephone: <%= @store.telephone %></li>
      <li>Website: <%= @store.website %></li>
      <li>Email: <%= @store.email %></li>
    </ul>
    <%= link_to 'Stores', mall_stores_path(@store.mall), class: "btn" %>
    <%= link_to 'Edit', edit_mall_store_path(@mall, @store), class: "btn btn-primary" %>
  </div>
</div>
