<%= simple_form_for([@mall, @floor], html: { multipart: true }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <%= f.association :mall, as: :hidden %>
  <%= f.input :label %>
  <%= f.input :main, label: false, inline_label: 'Main Floor' %>
  <%= f.input :order %>
  <%= f.input :svg_file, as: :file %>
  
  <%= f.button :submit, class: "btn btn-large btn-primary" %>
<% end %>
