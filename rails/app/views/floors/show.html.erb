<% provide(:title, @floor.mall.name) %> 
<h1><%= @floor.mall.name %> - <%= @floor.label %></h1>

<div class="row">
  <div class="span4 offset2">
    <ul>
      <li>Floor Label: <%= @floor.label %></li>
      <li>Is main floor: <%= @floor.main ? "Yes" : "No" %></li>
      <li>Order: <%= @floor.order %></li>
      <li>Source map file name: <%= @floor.source_map_file_name %></li>
      <li>Polygons: <%= Polygon.where(floor_id: @floor, from_svg: true).count %> from svg + <%= Polygon.where(floor_id: @floor, from_svg: false).count %> custom</li>
    </ul>
  </div>
  <div class="span4">
    <div class="map">
      <%= image_tag svg_floor_path(@floor) %>
    </div>
  </div>
</div>
<div class="row">
  <div class="span6 offset3">
    <%= link_to 'Floors', mall_floors_path(@floor.mall), class: "btn" %>
    <%= link_to 'Entrances', mall_floor_entrances_path(@floor.mall, @floor), class: "btn" %>
    <%= link_to 'Edit', edit_floor_path(@floor), class: "btn btn-primary" %>
  </div>
</div>
