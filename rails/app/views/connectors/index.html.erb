<% provide(:title, 'Connectors') %>
<h1><%= @mall.name %> - Connectors</h1>
<table class="table table-striped table-hover">
  <tr>
    <th>Type</th>
    <th style="width: 56px"></th>
  </tr>
<% @connectors.each do |connector| %>
  <tr>
    <td><%= connector.connector_type.name %></td>
    <td>
      <%= link_to [@mall, connector] do %><i class="icon-eye-open"></i><% end %>
      <%= link_to edit_mall_connector_path(@mall, connector) do %><i class="icon-pencil"></i><% end %>
      <%= link_to [@mall, connector], confirm: 'Are you sure?', method: :delete do %><i class="icon-remove"></i><% end %>
    </td>
  </tr>
<% end %>
</table>

<%= link_to 'Mall', mall_path(@mall), class: "btn" %>
<%= link_to 'New Connector', new_mall_connector_path(@mall), class: "btn btn-primary" %>
