<% provide(:title, 'Vendors') %>
<h1>Vendors</h1>
<table class="table table-striped table-hover">
  <tr>
    <th>Vendor Name</th>
    <th>Contact Email</th>
    <th>Website</th>
    <th></th>
  </tr>
<% @vendors.each do |vendor| %>
  <tr>
    <td><%= link_to vendor.name, vendor %></td>
    <td><%= vendor.contact_email %></td>
    <td><%= vendor.website %></td>
    <td><%= link_to 'Edit', edit_vendor_path(vendor) %></td>
  </tr>
<% end %>
</table>

<%= link_to 'New Vendor', new_vendor_path, class: "btn btn-primary" %>

